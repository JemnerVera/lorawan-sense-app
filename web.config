<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <!-- Configuración para Node.js en Azure -->
    <handlers>
      <add name="iisnode" path="backend/server.js" verb="*" modules="iisnode" />
    </handlers>
    
    <!-- Rewrite rules para SPA -->
    <rewrite>
      <rules>
        <!-- No reescribir rutas de API -->
        <rule name="API" stopProcessing="true">
          <match url="^api/.*" />
          <action type="Rewrite" url="backend/server.js" />
        </rule>
        
        <!-- No reescribir archivos estáticos -->
        <rule name="StaticContent" stopProcessing="true">
          <match url="^(.*)\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|json)$" />
          <action type="None" />
        </rule>
        
        <!-- Todas las demás rutas van al backend (que sirve el frontend) -->
        <rule name="NodeInspector" stopProcessing="true">
          <match url="^backend/server.js" />
          <action type="Rewrite" url="backend/server.js" />
        </rule>
        
        <!-- Reescribir todo lo demás a server.js -->
        <rule name="DynamicContent">
          <match url="/*" />
          <action type="Rewrite" url="backend/server.js" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Seguridad -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="DENY" />
        <add name="X-XSS-Protection" value="1; mode=block" />
      </customHeaders>
    </httpProtocol>
    
    <!-- Configuración de iisnode -->
    <iisnode 
      nodeProcessCommandLine="node"
      watchedFiles="*.js;web.config"
      loggingEnabled="true"
      devErrorsEnabled="false"
      debuggingEnabled="false"
      node_env="production"
    />
    
    <!-- Error handling -->
    <httpErrors errorMode="Detailed" />
  </system.webServer>
</configuration>

